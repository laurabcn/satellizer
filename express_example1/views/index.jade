doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width,initial-scale=1, user-scalable=no')
        title= pageTitle
        link(rel='stylesheet', href='../stylesheets/bootstrap.min.css')
        style(rel='stylesheet').
            .hide { display: none;}
            .m-t10 {
                margin-top: 10px;
            }
            .m-tb-10 {
                margin: 10px 0;
            }

        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
        script(type='text/javascript', src='../javascripts/bootstrap.min.js')
        script(type="text/javascript").
            $(document).ready(function(){
                $('#container').on('click', '.btn-success',  function(){
                    $(this).next('.showDataGet').toggleClass('hide');
                });
                $('#container').on('click', '.btn-primary', function () {
                    $(this).next('.showDataPost').toggleClass('hide');
                });
            });
    body
        h1 Api - Series
        #container.container-fluid
            ul.list-unstyled
                each serie in series
                    li
                        button.btn.btn-default.btn-success  GET
                        table.showDataGet.m-tb-10.hide.table.table-condensed
                            tr.success
                                td Id
                                td Title
                                td Description
                                td Seasons
                            tr
                                td=serie._id
                                td=serie.title
                                td=serie.summary
                                td=serie.seasons

                    li
                        button.btn.btn-default.btn-primary POST
                        div.showDataPost.row.hide.col-xs-12
                            form(id="formTVShowPost" method="POST" action="/tvshows" novalidate)
                                .form-group
                                    label(for='title').col-xs-3.col-md-3 Title
                                    input(type='text', name='title', class='form-control',
                                    id='titleTVShow', placeholder='Enter the title').col-xs-3.col-md-3
                                .form-group
                                    label(for='summary').col-xs-3.col-md-3 Summary
                                    input(type='textarea', name='summary', class='form-control',
                                    id='summary', placeholder='Enter a summary').col-xs-3.col-md-3
                                .form-group
                                    label(for='seasons').col-xs-3.col-md-3 Seasons
                                    input(type='text', name='seasons', class='form-control',
                                    id='seasons', placeholder='Enter number a seasons').col-xs-3.col-md-3
                                .form-group
                                    label(for='year').col-xs-3.col-md-3 Year
                                    input(type='text', name='year', class='form-control',
                                    id='year', placeholder='Enter a year').col-xs-3.col-md-3
                                .form-group
                                    label(for='country').col-xs-3.col-md-3 Country
                                    input(type='text', name='country', class='form-control',
                                    id='country', placeholder='Enter a country').col-xs-3.col-md-3
                                .form-group
                                    label(for='poster').col-xs-3.col-md-3 Poster
                                    input(type='text', name='poster', class='form-control',
                                    id='poster', placeholder='Enter a url of the poster').col-xs-3.col-md-3
                                .form-group
                                    label(for='genre').col-xs-3.col-md-3 Genre
                                    select(id="genre", name="genre").form-control.col-xs-3.col-md-3
                                        option(value='', selected='selected') Select a Genre
                                        option(value='Drama') Drama
                                        option(value='Fantasy') Fantasy
                                        option(value='Sci-Fi') Sci-Fi
                                        option(value='Thriller') Thriller
                                        option(value='Comedy') Comedy

                                .form-group
                                    label(for='year').col-xs-3.col-md-3 Year
                                    input(type='number', name='year', class='form-control',
                                    id='year', placeholder='Enter a year', pattern='/^19[0-9]{2}|2[0-9]{3}$/').col-xs-3.col-md-3